label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

[module/backlight-acpi]
type = internal/backlight
card = intel_backlight

;[module/cpu]
;type = internal/cpu
;interval = 4
;format-prefix = "Ôèé "
;format-prefix-foreground = ${colors.foreground}
;format-underline = #d997c0
;label = %percentage:3%%

;[module/memory]
;type = internal/memory
;interval = 4
;format-prefix = "mem "
;format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #4bffdc
;label = %gb_used% %mb_swap_used%

[module/eth]
type = internal/network
interface = eno1
interval = 4.0

format-connected-underline = ${colors.blue}
;format-connected-prefix = "ÓÜú "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

;[module/vpn]
;type = custom/script
;exec = echo VPN
;exec-if = pgrep -x openvpn
;interval = 5
;format-prefix = "Óå™ "
;format-underline = ${colors.aqua}

[module/time]
type = custom/script
exec = date +%R
;label = "%output%"
interval = 60
;padding-left = 4

[module/mem]
type = custom/script
exec = free -h | awk '/Mem:/ {print $3}'
interval = 4

[module/swap]
type = custom/script
exec = free -h | awk '/Swap:/ {print $3}'
interval = 4

[module/temp]
type = custom/script
exec = cat /sys/class/thermal/thermal_zone0/temp | sed s/000/\'C/
interval = 4

;[module/date]
;type = internal/date
;interval = 60
;date =
;date-alt = " %B %d, "
;time = %H:%M
;time-alt = %H:%M
;format-prefix = "   "
;label = %time%

